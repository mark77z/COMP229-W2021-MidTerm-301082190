<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                  placeholder="Book Name"
                  name="title"
                  <% if(typeof book !== 'undefined' && book ){ %>value="<%= book.Title %>" <% } %> 
                  required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                  placeholder="Book Price"
                  name="price" 
                  <% if(typeof book !== 'undefined' && book ){ %>value="<%= book.Price %>" <% } %> 
                  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                  placeholder="Book Author"
                  name="author"
                  <% if(typeof book !== 'undefined' && book ){ %>value="<%= book.Author %>" <% } %> 
                  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                  placeholder="Book Genre"
                  name="genre"
                  <% if(typeof book !== 'undefined' && book ){ %>value="<%= book.Genre %>" <% } %>  
                  required>
              </div>
              <div class="form-group">
                <label for="descriptionTextField">Description</label>
                <textarea class="form-control"
                id="descriptionTextField"
                placeholder="Enter a brief desription of the book"
                name="description" required><% if(typeof book !== 'undefined' && book ){ %><%= book.Description %><% } %></textarea>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
